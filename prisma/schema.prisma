generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LLMModel {
  GPT_5_NANO
  CLAUDE_4_OPUS
  GEMINI_2_5_PRO
}

model Agent {
  id                  String   @id @default(uuid())
  name                String
  system_prompt       String
  llm_model           LLMModel @default(GPT_5_NANO)
  llm_model_formatted String   @default("GPT 5 Nano")
  temperature         Float    @default(0.7)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Message {
  id            String   @id @default(uuid())
  sender_id     String
  receiver_id   String?
  content       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}